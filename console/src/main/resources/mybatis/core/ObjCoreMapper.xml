<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.somta.juggle.console.infrastructure.mapper.ObjMapper" >
<!-- Result Map-->
<resultMap id="BaseResultMap" type="net.somta.juggle.console.infrastructure.po.ObjPO" >
	<result column="id" property="id"/>
	<result column="obj_code" property="objCode"/>
	<result column="obj_name" property="objName"/>
	<result column="obj_desc" property="objDesc"/>
	<result column="created_at" property="createdAt"/>
	<result column="created_by" property="createdBy"/>
	<result column="updated_at" property="updatedAt"/>
	<result column="updated_by" property="updatedBy"/>
</resultMap>

<sql id="Example_Where_Clause">
	where 1=1
	<if test="objName != null and objName != ''">
		and obj_name like concat("%", #{objName}, "%")
	</if>
</sql>
       
<!-- t_obj table all fields -->
<sql id="Base_Column_List" >
	id, obj_code, obj_name, obj_desc, created_at, created_by, updated_at, updated_by
</sql>

<insert id="add" parameterType="net.somta.juggle.console.infrastructure.po.ObjPO" >
	insert into t_obj (id, obj_code, obj_name, obj_desc, created_at, created_by, updated_at, updated_by)
	values (#{id},#{objCode},#{objName},#{objDesc},#{createdAt},#{createdBy},#{updatedAt},#{updatedBy});
</insert>

<delete id="deleteById" parameterType="java.lang.Long">
 delete from t_obj where id=#{id}
</delete>

<update id="update" parameterType="net.somta.juggle.console.infrastructure.po.ObjPO" >
	update t_obj set
	<trim  suffixOverrides="," >
		<if test="objCode != null and objCode != ''">
			obj_code=#{objCode},
		</if>
		<if test="objName != null and objName != ''">
			obj_name=#{objName},
		</if>
		<if test="objDesc != null and objDesc != ''">
			obj_desc=#{objDesc},
		</if>
		<if test="createdAt != null">
			created_at=#{createdAt},
		</if>
		<if test="createdBy != null">
			created_by=#{createdBy},
		</if>
		<if test="updatedAt != null">
			updated_at=#{updatedAt},
		</if>
		<if test="updatedBy != null">
			updated_by=#{updatedBy},
		</if>
	</trim> where id=#{id}
</update>

<select id="queryById" resultMap="BaseResultMap" parameterType="java.lang.Long">
	select <include refid="Base_Column_List" />
	from t_obj where id = #{id}
</select>

<select id="queryListCount" resultType="java.lang.Long" parameterType="net.somta.juggle.console.interfaces.param.ApiQueryParam">
	select count(*)
	from t_obj
	<include refid="Example_Where_Clause"/>
</select>

<select id="queryByList" resultMap="BaseResultMap" parameterType="net.somta.juggle.console.interfaces.param.ApiQueryParam">
	select <include refid="Base_Column_List" />
	from t_obj
	<include refid="Example_Where_Clause"/>
</select>

</mapper>   
