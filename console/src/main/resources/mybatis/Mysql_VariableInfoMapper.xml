<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.somta.juggle.console.infrastructure.mapper.VariableInfoMapper" >
<!-- Result Map-->
<resultMap id="BaseResultMap" type="net.somta.juggle.console.infrastructure.model.VariableInfo" >
	<result column="id" property="id"/>
	<result column="flow_definition_id" property="flowDefinitionId"/>
	<result column="env_key" property="envKey"/>
    <result column="env_name" property="envName"/>
	<result column="env_type" property="envType"/>
    <result column="data_type" property="dataType"/>
</resultMap>
       
<!-- th_role_user table all fields -->
<sql id="Base_Column_List" >
	id, flow_definition_id, env_key, env_name,env_type,data_type
</sql>
   
<insert id="addVariable" parameterType="net.somta.juggle.console.infrastructure.model.VariableInfo" >
	insert into t_variable_info (id, flow_definition_id, env_key, env_name, env_type, data_type)
	values (#{id},#{flowDefinitionId},#{envKey},#{envName},#{envType},#{dataType});
</insert>

<insert id="batchAddVariable">
	insert into t_variable_info (id, flow_definition_id, env_key, env_name, env_type, data_type)
	values
	<foreach collection ="variableInfoList" item="item" separator =",">
		(#{item.id},#{item.flowDefinitionId},#{item.envKey},#{item.envName},#{item.envType},#{item.dataType})
	</foreach>
</insert>

<delete id="deleteVariableById" parameterType="java.lang.Long">
	delete from t_variable_info where id=#{id}
</delete>

<delete id="deleteVariableByFlowDefinitionId" parameterType="java.lang.Long">
	delete from t_variable_info where flow_definition_id=#{flowDefinitionId}
</delete>

<delete id="deleteVariable" parameterType="java.util.Map">
	delete from t_variable_info where flow_definition_id=#{flowDefinitionId} and id=#{id}
</delete>

<update id="updateVariable" parameterType="net.somta.juggle.console.infrastructure.model.VariableInfo" >
	update t_variable_info set
	<trim  suffixOverrides="," >
	<if test="id != null">
		id=#{id},
	</if>
	<if test="flowDefinitionId != null">
		flow_definition_id=#{flowDefinitionId},
	</if>
	<if test="envKey != null and envKey != ''">
		env_key=#{envKey},
	</if>
	<if test="envName != null and envName != ''">
		env_name=#{envName},
	</if>
	<if test="envType != null">
		env_type=#{envType},
	</if>
	<if test="dataType != null and dataType != ''">
		data_type=#{dataType},
	</if>
	</trim> where id=#{id}
</update>

