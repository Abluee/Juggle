<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.somta.juggle.console.infrastructure.mapper.FlowDefinitionMapper" >

    <insert id="addFlowDefinitionInfo" useGeneratedKeys="true" keyProperty="id" parameterType="net.somta.juggle.console.infrastructure.po.FlowDefinitionInfoPO" >
        insert into t_flow_definition (id, flow_key, flow_name,flow_type, flow_content, remark, created_at, created_by, updated_at, updated_by)
        values (#{id},#{flowKey},#{flowName},#{flowType},#{flowContent},#{remark},#{createdAt},#{createdBy},#{updatedAt},#{updatedBy});
    </insert>

    <select id="queryFlowDefinitionByKey" resultMap="BaseResultMap" parameterType="java.lang.String">
        select <include refid="Base_Column_List" />
        from t_flow_definition where flow_key = #{flowKey}
    </select>

</mapper>   
